<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/photoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="@string/picture_title"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/pickedImage"
        app:layout_constraintStart_toStartOf="@id/pickedImage" />

    <ImageView
        android:id="@+id/pickedImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoTitle" />

    <Button
        android:id="@+id/makeFavorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_favorite"
        android:fontFamily="serif"
        android:text="@string/mark_as_favorite"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/pickedImage"
        app:layout_constraintStart_toStartOf="@id/pickedImage"
        app:layout_constraintTop_toBottomOf="@+id/pickedImage" />

</android.support.constraint.ConstraintLayout>